<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textTitle" android:textAlignment="center"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp" tools:layout_editor_absoluteY="208dp"
                tools:layout_editor_absoluteX="176dp" android:id="@+id/textView" android:layout_weight="8"
                android:textAlignment="center" android:gravity="center" android:textSize="100sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" tools:layout_editor_absoluteY="235dp" tools:layout_editor_absoluteX="8dp"
                android:layout_weight="1">
            <Button
                    android:text="Thread"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/buttonThread" android:layout_weight="1"
                    android:gravity="center"/>
            <Button
                    android:text="Async"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/buttonAsync" android:layout_weight="1"
                    android:gravity="center"/>
            <Button
                    android:text="Coroutine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/buttonCoroutine" android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>